# Trua Collect Environment Configuration

# Default collection key to use when no key is provided in URL
# Format: [language][12 bits for configuration]
# Example: en000111100100 - English, all steps enabled
DEFAULT_COLLECTION_KEY=en000111100100

# Server port
PORT=3000

# Development mode (true/false)
DEV_MODE=true

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# API endpoints
API_BASE_URL=http://localhost:3001/api

# Document storage path
DOCUMENT_STORAGE_PATH=./storage/documents